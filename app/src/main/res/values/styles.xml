<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style for the Detail Activity labels -->
    <style name="DetailLabelStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/detail_label_width</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
    </style>

    <!-- Style for the Detail Activity text -->
    <style name="DetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_sz_medium</item>
    </style>

    <!-- Style for Trailers an Reviews labels -->
    <style name="TitleLabelStyle" parent="DetailLabelStyle">
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_sz_large</item>
    </style>

    <style name="sectionHeader" parent="TitleLabelStyle">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">@dimen/padding_extra_small</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/padding_extra_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>